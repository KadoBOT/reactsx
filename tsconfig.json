{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "noLib": false,
    "jsx": "react",
    "outDir": "dist",
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "static"
  ],
  "externalTranspiler": "babel",
  "compileOnSave": false
}
